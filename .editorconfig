# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{c,cpp,h}]
end_of_line = lf

[*.md]
max_line_length = off
trim_trailing_whitespace = false